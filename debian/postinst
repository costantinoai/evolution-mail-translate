#!/bin/bash
# postinst script for evolution-translate-extension
# Note: No network operations or pip installs here.

set -e

case "$1" in
    configure)
        echo "Evolution Translation Extension installed."
        echo
        echo "Note: Python dependencies and models are managed per user."
        echo "Run the following as the target user to set up the environment:"
        echo "  evolution-translate-setup"
        echo
        echo "After setup, restart Evolution to load the extension."
        echo
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac


exit 0
