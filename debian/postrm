#!/bin/bash
# postrm script for evolution-translate-extension
# Cleanup after package removal

set -e

case "$1" in
    purge)
        # No additional cleanup needed; user-level environments remain under ~/.local
        # GSettings schemas cache is handled by GLib's dpkg triggers.
        # No manual invocation of glib-compile-schemas is needed here.
        ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
